{
  "nameit": {
    "rules": [
      {
        "expression": "{project}_{asset_type}_{asset_id}_{description}", 
        "description": "Rule used to rename asset files", 
        "name": "asset", 
        "iterator_format": "@"
      }, 
      {
        "iterator_format": "@", 
        "expression": "{asset_name}_{asset_file_type}", 
        "description": "", 
        "name": "asset_file"
      }
    ], 
    "tokens": [
      {
        "default": 0, 
        "override_value": "", 
        "values": {
          "value": [], 
          "key": []
        }, 
        "name": "description", 
        "description": "Description of the asset"
      }, 
      {
        "default": 0, 
        "override_value": "", 
        "values": {
          "key": [
            "iterator"
          ], 
          "value": [
            "#"
          ]
        }, 
        "name": "id", 
        "description": "The format of the id\n\n#: Id with a unique numeric value\n@: Id with an alphabetic value (lowercase)\n@^: Id with an alphabetic value (upperase)\n\nNOTE: @ key do not need multiples keys ( @@, @@@) beause the system\nautomatically will add double alphabetic characters if we pass the 'z' character (a...z, aa, ab, ac, ad ...)"
      }, 
      {
        "default": 0, 
        "override_value": "", 
        "values": {
          "key": [], 
          "value": []
        }, 
        "name": "shot", 
        "description": "Shot the file belongs to"
      }, 
      {
        "default": 0, 
        "override_value": "", 
        "values": {
          "value": [], 
          "key": []
        }, 
        "name": "sequence", 
        "description": "Sequence the file belongs to"
      }, 
      {
        "default": 0, 
        "override_value": "", 
        "values": {
          "key": [
            "props", 
            "backgroundelements", 
            "characters"
          ], 
          "value": [
            "PRP", 
            "BGE", 
            "CHR"
          ]
        }, 
        "name": "asset_type", 
        "description": ""
      }, 
      {
        "default": 0, 
        "override_value": "", 
        "values": {
          "value": [], 
          "key": []
        }, 
        "name": "project", 
        "description": "Short name of the current project"
      }, 
      {
        "default": 0, 
        "override_value": "", 
        "values": {
          "value": [], 
          "key": []
        }, 
        "name": "asset_id", 
        "description": "Unique number for each one of the assets inside a category"
      }, 
      {
        "default": 0, 
        "override_value": "", 
        "values": {
          "key": [
            "shading", 
            "rig"
          ], 
          "value": [
            "SHD", 
            "RIG"
          ]
        }, 
        "name": "asset_file_type", 
        "description": ""
      }, 
      {
        "default": 0, 
        "override_value": "", 
        "values": {
          "key": [], 
          "value": []
        }, 
        "name": "asset_name", 
        "description": "Complete name of the asset"
      }, 
      {
        "default": 0, 
        "override_value": "", 
        "values": {
          "key": [], 
          "value": []
        }, 
        "name": "extension", 
        "description": ""
      }
    ], 
    "template_tokens": {
      "asset_name": {
        "description": "Name of the asset"
      },
      "asset_type": {
        "description": "Type of the asset"
      },
      "version_folder": {
        "description": "Version folder of the file"
      }, 
      "file_type": {
        "description": "Type of the file"
      },
      "file_extension": {
        "description": "Extension of the file"
      },
      "texture_name": {
        "description": "Name of the texture"
      },
      "sequence_name": {
        "description": "Name of the sequence. This name must be unique."
      }
    }, 
    "templates": [
      {
        "pattern": "Assets/Props/{asset_name}/{version_folder}/model/{asset_name}.ma",
        "name": "prop_model"
      },
      {
        "pattern": "Assets/Props/{asset_name}/{version_folder}/rig/{asset_name}_RIG.ma",
        "name": "prop_rig"
      },
      {
        "pattern": "Assets/Props/{asset_name}/{version_folder}/shading/{asset_name}_SHD.ma",
        "name": "prop_shading"
      },
      {
        "pattern": "Assets/Props/{asset_name}/{version_folder}/textures/{texture_name}.{file_extension}",
        "name": "prop_textures"
      },
      {
        "pattern": "Assets/BackgroundElements/{asset_name}/{version_folder}/model/{asset_name}.ma",
        "name": "backgroundelement_model"
      },
      {
        "pattern": "Assets/BackgroundElements/{asset_name}/{version_folder}/rig/{asset_name}_RIG.ma",
        "name": "backgroundelement_rig"
      },
      {
        "pattern": "Assets/BackgroundElements/{asset_name}/{version_folder}/shading/{asset_name}_SHD.ma",
        "name": "backgroundelement_shading"
      },
      {
        "pattern": "Assets/BackgroundElements/{asset_name}/{version_folder}/textures/{texture_name}.{file_extension}",
        "name": "backgroundelement_textures"
      },
      {
      "pattern": "{sequence_name}_{sequence_index}",
      "name": "sequence_name"
      },
      {
        "pattern": "Production/{sequence_name}_{sequence_index}",
        "name": "sequence"
      },
      {
        "pattern": "Production/{sequence_name}_{sequence_index}/_master_layout",
        "name": "master_layout_folder"
      },
      {
        "pattern": "Production/{sequence_name}_{sequence_index}/_master_layout/__working__/seq_layout",
        "name": "master_layout_working_folder"
      },
      {
        "pattern": "Production/{sequence_name}_{sequence_index}/_master_layout/seq_layout/_seq_master_layout.ma",
        "name": "master_layout_file"
      }
    ]
  }
}